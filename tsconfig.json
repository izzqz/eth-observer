{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": false,
        "target": "esnext",
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "build",
        "rootDir": "./",
        "baseUrl": "./",
        "types": ["jest", "node"],
        "paths": {
            "@interfaces/*": ["./src/interfaces/*"],
            "@services/*": ["./src/services/*"],
            "@test/*": ["./test/*"]
        }
    },
    "exclude": ["node_modules"],
    "lib": ["es2015"]
}
