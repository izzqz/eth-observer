{
    "name": "eth-observer",
    "version": "1.0.0",
    "description": "This is a test task for applying for a job",
    "main": "dist/index.js",
    "scripts": {
        "lint": "tslint -p tsconfig.json",
        "test": "jest",
        "test:watch": "jest --watch",
        "build": "tsc -p tsconfig.json",
        "format": "prettier 'src/**/*.ts' --write",
        "dev": "tsc-watch --noClear -p ./tsconfig.json --onSuccess \"node ./dist/index.js\"",
        "start": "[ -d 'dist' ] && node dist/index.js || echo 'Error: Directory `dist` does not exists. Try run `npm build` first'"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/izzqz/eth-observer.git"
    },
    "keywords": [],
    "author": "Vyacheslav <vyacheslav@izzqz.me>",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/izzqz/eth-observer/issues"
    },
    "homepage": "https://github.com/izzqz/eth-observer#readme",
    "dependencies": {
        "fastify": "^3.21.3",
        "got": "^11.8.2"
    },
    "devDependencies": {
        "@types/jest": "^27.0.2",
        "@types/node": "^16.9.6",
        "jest": "^27.2.1",
        "pino-pretty": "^7.0.1",
        "prettier": "^2.4.1",
        "ts-jest": "^27.0.5",
        "tsc-watch": "^4.5.0",
        "tslint": "^6.1.3",
        "typescript": "^4.4.3"
    },
    "prettier": {
        "trailingComma": "none",
        "tabWidth": 4,
        "semi": true,
        "singleQuote": true
    }
