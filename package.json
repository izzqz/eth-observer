{
    "name": "eth-observer",
    "version": "1.0.0",
    "description": "This is a service with one HTTP endpoint which returns the most valuable Ethereum address from the past 100 blocks",
    "scripts": {
        "lint": "tslint -p tsconfig.json",
        "test": "jest",
        "test:watch": "jest --watch",
        "build": "rimraf build && tsc -p tsconfig.json",
        "format": "prettier --write .",
        "dev": "tsc-watch --noClear -p ./tsconfig.json --onSuccess \"node ./build/app.js\"",
        "start": "node build/app.js"
    },
    "engines": {
        "node": ">=14"
    },
    "private": true,
    "repository": {
        "type": "git",
        "url": "git+https://github.com/izzqz/eth-observer.git"
    },
    "author": "Vyacheslav <vyacheslav@izzqz.me>",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/izzqz/eth-observer/issues"
    },
    "homepage": "https://github.com/izzqz/eth-observer#readme",
    "dependencies": {
        "dotenv": "^10.0.0",
        "fastify": "^3.21.6",
        "got": "^11.8.2"
    },
    "devDependencies": {
        "@types/jest": "^27.0.2",
        "@types/node": "^16.10.2",
        "jest": "^27.2.4",
        "pino-pretty": "^7.0.1",
        "prettier": "^2.4.1",
        "rimraf": "^3.0.2",
        "ts-jest": "^27.0.5",
        "ts-node": "^10.2.1",
        "tsc-watch": "^4.5.0",
        "tslint": "^6.1.3",
        "typescript": "^4.4.3"
    },
    "prettier": {
        "trailingComma": "none",
        "tabWidth": 4,
        "semi": true,
        "singleQuote": true
    }
}
